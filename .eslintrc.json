{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "no-console": 2,
        "maximumLineLength": 180,
        "indent": ["error",4],
        "camelcase": 2,
        "quotes": ["error", "single"],
        "space-before-function-paren": [1, "never"],
        "arrow-body-style": 2,
        "no-empty":2,
        "no-undef":2
    }
}